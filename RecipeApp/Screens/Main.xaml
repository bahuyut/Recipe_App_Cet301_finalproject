<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeApp.Screens.Main"
             Title="Main">
    <StackLayout>
        <!-- SearchBar -->
        <SearchBar x:Name="searchBar" Placeholder="Ara..." BackgroundColor="White" />

        <!-- Diğer içerikler -->
        <ScrollView>
            <!-- Yemek kutularını içeren StackLayout -->
            <StackLayout x:Name="yemekStackLayout">
                <Frame CornerRadius="16" Margin="10">
                    <Grid>
                        <!-- Sol tarafta yemek görseli -->
                        <Image Source="karniyarik.jpg" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" HorizontalOptions="Start" />
                        
                        <!-- Sağ tarafta yemek ismi -->
                        <Label Text="Karnıyarık" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="150,0,0,0" />
                    </Grid>
                </Frame>
                <Frame CornerRadius="16" Margin="10">
                    <Grid>
                        <!-- Sol tarafta yemek görseli -->
                        <Image Source="kurufasülye.jpg" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" HorizontalOptions="Start" />
                        
                        <!-- Sağ tarafta yemek ismi -->
                        <Label Text="Kuru Fasülye" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="150,0,0,0"/>
                    </Grid>
                </Frame>
                <Frame CornerRadius="16" Margin="10">
                    <Grid>
                        <!-- Sol tarafta yemek görseli -->
                        <Image Source="mantı.jpg" Aspect="AspectFill" HeightRequest="100" WidthRequest="100" HorizontalOptions="Start" />
                        
                        <!-- Sağ tarafta yemek ismi -->
                        <Label Text="Mantı" VerticalOptions="Center" HorizontalOptions="StartAndExpand" Margin="150,0,0,0"/>
                    </Grid>
                </Frame>
                
                
                <!-- Diğer yemek kutularını ekleyebilirsiniz -->
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
